generator client {
  provider   = "prisma-client-js"
  output     = "../generated/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

// User (Managed by NextAuth)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // Access Control: default false means "Closed Beta"
  hasAccess Boolean @default(false)

  accounts Account[]
  sessions Session[]

  // Track user queries
  queries UserQuery[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Store the core analysis to cache results (One record per Ticker per Day/TTL)
model AnalysisResult {
  id     String @id @default(cuid())
  symbol String // Stock Symbol (e.g., "AAPL")
  price  Float // Price at time of analysis
  score  Int    @default(0) // 0-100 Score

  // High-level Qualitative Metadata (Flat for querying)
  tier            String // e.g., "Tier 1 (Quality Compounder)"
  moat            String // e.g., "Wide Moat"
  valuationStatus String // e.g., "Undervalued"

  // Complex Data (Stored as JSON)
  thesis     Json // Full StockQualitativeAnalysis (Porter, Drivers, etc.)
  dcf        Json // DCFResult (Sensitivity, Assumptions, Intrinsic Value)
  financials Json // Key Financials { revenue, netIncome, fcf, netDebt }

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Link to user queries
  userQueries UserQuery[]

  @@index([symbol])
}

// Logs of who asked for what (useful for history/usage limits)
model UserQuery {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  symbol String

  analysisResultId String
  analysisResult   AnalysisResult @relation(fields: [analysisResultId], references: [id])

  createdAt DateTime @default(now())
}

// NextAuth Standard Models...
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
