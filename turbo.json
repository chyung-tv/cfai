{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "@repo/db#build": {
      "env": [
        "DATABASE_URL",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL"
      ],
      "outputs": []
    },
    "web#build": {
      "dependsOn": ["^build"],
      "env": [
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "DATABASE_URL",
        "NEXT_PUBLIC_BACKEND_URL",
        "NEXT_PUBLIC_BACKEND_WS_URL"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "backend#build": {
      "dependsOn": ["^build"],
      "env": ["GOOGLE_API_KEY", "FMP_API_KEY", "FMP_BASE_URL", "DATABASE_URL"],
      "outputs": ["dist/**", ".motia/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": ["DATABASE_URL"],
  "globalDependencies": [
    "packages/db/prisma/schema.prisma",
    "packages/types/src/**"
  ]
}
